<h1>All Events</h1>

<div>
    <% if current_casting_agent %>
        <%= link_to "Create New Event", new_event_path %><br>
    <% end %>
</div>

<br>

<div>
    <%= form_tag(events_path, method: "get") do %>
        <%= label_tag(:q, "Search by Casting Agent:") %>
        <%= collection_select(:q, :id, CastingAgent.all, :id, :name, prompt: :true) %>
        <%= submit_tag("Search") %><br>
    <% end %>
<br>
</div>

<div class="parent">
    <% @count = 1%>
    <% @events.each do |event| %>
        <div class="div<%= @count %>">
        <img src="https://cdn2.bigcommerce.com/server4900/364bb/products/219458/images/171169/203739__48716.1559631124.380.500.jpg?c=2" alt="profile pic" width="200" height=""><br>
        Title: <%= link_to event.title, event_path(event) %><br>
        Casting Director: <%= link_to event.casting_agent.name, casting_agent_path(event.casting_agent) %><br>
        Audition Date: <%= event.formatted_date %><br>
        <% if current_actor %>
            <%= link_to "Request Audition for this Event", new_request_path %><br>
            <br>
        <% end %></div>
        <% @count += 1 %>
    <% end %>
</div>
