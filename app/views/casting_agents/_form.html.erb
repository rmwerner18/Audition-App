<div class="mt-4"><h2>Edit Profile</h2></div>
<div class="container">
            <% if @casting_agent.pic %>
                <img src="<%= @casting_agent.pic %>" alt="profile pic" width="200" height="">
            <% else %>
                <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn%3AANd9GcSZ-DmIegqV6NuZRRdNs2sxqmYI39YksNtj7Q&usqp=CAU" width="200">
            <% end %><br></div>

<div class="container">
      <%= form_for @casting_agent do |f| %>
        <%= render "casting_agents/shared/error_messages", resource: @casting_agent %>

        <div class="field form-group px-5 mx-5">
          <%= f.label "Profile Picture" %>
          <%= f.text_field :pic, class: "form-control text-center", placeholder: "Profile URL" %>
        </div>
          
        <div class="field form-group px-5 mx-5">
          <%= f.label :name %>
          <%= f.text_field :name, class: "form-control text-center", placeholder: "Full Name", autofocus: true %><br>
        </div>

        <div class="field form-group px-5 mx-5">
          <%= f.label :agency %>
          <%= f.text_field :agency, class: "form-control text-center", placeholder: "Agency Name" %><br>
        </div>
        
        <div class="field form-group px-5 mx-5">
          <%= f.label :username %>
          <%= f.text_field :username, class: "form-control text-center", placeholder: "Username" %>
        </div>
        
        <div class="field form-group px-5 mx-5 pb-3">
          <%= f.label :email %><br />
          <%= f.email_field :email, class: "form-control text-center", placeholder: "email@example.com", autocomplete: "email" %>
        </div>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
        <% end %>

        <div class="field form-group px-5 mx-5 pb-3">
          <%= f.label :password %><br> 
          <i>(leave blank if you don't want to change it)</i><br>
          <%= f.password_field :password, class: "form-control text-center", placeholder: "New Password", autocomplete: "new-password" %>
          <% if @minimum_password_length %>
            <em><%= @minimum_password_length %> characters minimum</em>
          <% end %>
        </div>

        <div class="field form-group px-5 mx-5 pb-3">
          <%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, class: "form-control text-center", placeholder: "New Password Confirmation", autocomplete: "new-password" %>
        </div>

        <div class="field form-group px-5 mx-5 pb-3">
          <%= f.label :current_password %><br>
          <i>(we need your current password to confirm your changes)</i><br />
          <%= f.password_field :current_password, class: "form-control text-center", placeholder: "Current Password", autocomplete: "current-password" %>
        </div>

        <div class="actions form-group px-5 mx-5">
          <%= f.submit "Update" %>
        </div>
      <% end %>

      </div>
      <h3>Cancel my account</h3>

      <p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

      <%= link_to "Back", :back %>