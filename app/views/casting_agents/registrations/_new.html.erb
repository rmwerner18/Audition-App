<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

  <div class="field form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control", placeholder: "Full Name", autofocus: true %>
  </div>

  <div class="field form-group">
    <%= f.label :agency %>
    <%= f.text_field :agency, class: "form-control", placeholder: "Agency Name" %>
  </div>

  <div class="field form-group">
    <%= f.label "Headshot" %><br />
    <%= f.text_field :pic, class: "form-control", placeholder: "Image URL" %>
  </div>

  <div class="field form-group">
    <%= f.label :username %>
    <%= f.text_field :username, class: "form-control", placeholder: "Username" %>
  </div>

  <div class="field form-group">
    <%= f.label :email %><br />
    <%= f.email_field :email, autocomplete: "email", class: "form-control", placeholder: "email@example.com" %>
    <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
  </div>

  <div class="field form-group">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder: "Password" %>
  </div>

  <div class="field form-group">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder: "Password" %>
  </div>

  <div class="actions form-group">
    <%= f.submit "Sign up" %>
  </div>
<% end %>
