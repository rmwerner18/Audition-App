<h1>
    <%= @audition.event.title %>
</h1>
<div>
    <h3>
        <%= @audition.formatted_time %>
    </h3>
    Location: <%= @audition.event.location %><br>
    <% if current_actor %>
        Casting Agent: <%= @audition.event.casting_agent.name %><br>
    <% elsif current_casting_agent %>
        Actor: <%= @audition.actor.name %><br>
    <% end %>
    <% if current_casting_agent %>
        <%= button_to "Edit Audition", edit_audition_path(@audition), method: :get, :class => "btn btn-outline-primary" %><br>
    <% end %>
    <%= button_to "Cancel Audition", delete_audition_path(@audition), method: :destoy, :class => "btn btn-outline-danger mt-5" %><br>
</div>