<div class="container" id="actor">
    <div class="row">
        <div class="col-3">
            <% if @actor.pic %>
                <img src="<%= @actor.pic %>" alt="profile pic" width="200" height="">
            <% else %>
                <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn%3AANd9GcSZ-DmIegqV6NuZRRdNs2sxqmYI39YksNtj7Q&usqp=CAU" width="200">
            <% end %><br></div>
        <div class="col-6" id="actor">
            <h1 id="actor">
                <%= @actor.name %>
            </h1>
            <div id="actor">
                Gender: <%= @actor.sex %><br>
                Age: <%= @actor.age %><br>
                Past Roles: <%= @actor.past_roles %><br>
            </div>
        </div>
        <% if current_actor %>
            <div class="col-3 pt-5">
                <%= button_to "Edit Profile", edit_actor_registration_path(@actor), method: :get %>
            </div>
        <% end %>
    </div>
    <div class="row">
        <div class="col-3">
            <div>
                Auditions:
                <% @actor.auditions.each do |audition| %>
                    Event: <%= link_to audition.event.title, event_path(audition.event) %><br>
                    Date: <%= audition.event.date.strftime("%B %d, %Y") %><br>
                    Time: <%= audition.time.strftime("%I:%M%p") %><br>
                    <br>
                <% end %>
            </div>
        </div>
        <div class="col-9" id="actor">
            About: <%= @actor.about %><br>
        </div>
    </div>
</div>

<div>
    <% if current_casting_agent %>
        <%= link_to "Back to All Actors", actors_path %>
    <% end %>
</div>