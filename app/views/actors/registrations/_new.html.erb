<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "actors/shared/error_messages", resource: resource %>

  <div class="field form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control", placeholder: "Full Name", autofocus: true %>
  </div>

  <div class="field form-group">
    <%= f.label :gender %>
    <%= f.text_field :sex, class: "form-control", placeholder: "Gender" %>
  </div>

  <div class="field form-group">
    <%= f.label :age %>
    <%= f.number_field :age, class: "form-control", placeholder: "Age" %>
  </div>

  <div class="field form-group">
    <%= f.label :username %>
    <%= f.text_field :username, class: "form-control", placeholder: "Username" %>
  </div>

  <div class="field form-group">
    <%= f.label :email %><br />
    <%= f.email_field :email, autocomplete: "email", class: "form-control", placeholder: "email@example.com" %>
  </div>

  <div class="field form-group">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder: "Password" %>
  </div>

  <div class="field form-group">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder: "Password" %>
  </div>

  <div class="actions form-group">
    <%= f.submit "Sign up", :class => "btn btn-outline-primary" %>
  </div>
<% end %>