<h1>
  Actors
</h1>

<div class="parent mt-5">
  <% @count = 1 %>
    <% @actors.each do |actor| %>
      <div class="div<%= @count %>"><img src="<%= actor.pic %>" alt="profile pic" class="mb-2 pics rounded border"><br>
      <%= link_to actor.name, actor_path(actor) %><br>
      Age: <%= actor.age %><br>
      <br>
      <% @count += 1 %>
      </div>
    <% end %>

</div>